# Composio MCP
COMPOSIO_API_KEY=comp_xxx

# ===== MEM0 INTEGRATION =====
# Memory System for Synthia
MEM0_API_KEY=m0-PZpOSwzW4youXr1ji4BtqdSjFJYjioUbWmaarkBg
